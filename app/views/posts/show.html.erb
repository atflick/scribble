
<h3><a href="/">Back</a></h3>

<h2><%= @post.title %></h2>


<div class="post-show">
  <h6>This post was created on <%= @post.created_at %> by <%= @post.author %>.</h6>
  <p><%= @post.message %></p>

  <%= form_for @post, method: :delete do |f| %>
    <%= f.submit "Remove Post", class: "delete" %>
  <% end %>

  <div class="comments">
    <h4>Comments</h4>

    <% @post.comments.each do |comment| %>
      <div class="comment">
        <p><%= comment.message %></p>
        <h6>by <%= comment.author %> on <%= comment.created_at %>.</h6>
        <%= link_to "Edit Comment", edit_post_comment_path(@post, comment) %>
      </div>

    <% end %>
  </div>

  <h4>Leave a Comment</h4>


</div>
